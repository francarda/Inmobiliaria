@model IEnumerable<Inmobiliaria.Models.Contrato>

@{
    ViewData["Title"] = "Index";
}

<h1>Contratos</h1>

<p>
    <a asp-action="Create"><i class="fa-solid fa-file-signature">|  Crear contrato</i></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdContrato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdInquilino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.inquilino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdInmueble)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Monto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desde)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hasta)
            </th>
            <th>
                Detalles
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdContrato)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdInquilino)
            </td>
            <td>
                @item.inquilino.toString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdInmueble)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Monto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Desde)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hasta)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdContrato" title="Editar"><i class="fa-solid fa-pen-to-square" style="color: #558b35;"></i></a>
                <a asp-action="Details" asp-route-id="@item.IdContrato" title="Details"> <span class="fa-solid fa-circle-info" style="color: #4ea9bc;"></span></a>
                @if (User.IsInRole("Administrador") || User.IsInRole("SuperAdministrador"))
					{
                <a asp-action="Delete" asp-route-id="@item.IdContrato" title="Eliminar">
                <span class="fa-solid fa-trash-arrow-up" style="color: #ea603e;"></span></a>}
                <!-- @Html.ActionLink("Detalles", "Details", new {id=item.IdContrato})--> 
               
            </td>
        </tr>
}
    </tbody>
</table>
