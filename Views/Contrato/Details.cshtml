@model Inmobiliaria.Models.Contrato

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Contrato</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdContrato)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdContrato)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdInquilino)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdInquilino)
        </dd>
        <dt class = "col-sm-2">
            Nombre del inquilino
        </dt>
        <dd class = "col-sm-10">
            @Model.inquilino.toString()
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdInmueble)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdInmueble)
        </dd>
        <dt class = "col-sm-2">
           Direccion del Inmueble
        </dt>
        <dd class = "col-sm-10">
            @Model.inmueble.toString()
        </dd>
        <dt class= "col-sm-2">
            @Html.DisplayNameFor(model => model.Desde)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Desde)
        </dd>
        <dt class= "col-sm-2">
            @Html.DisplayNameFor(model => model.Hasta)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Hasta)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Monto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Monto)
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.IdContrato" title="Editar"><i class="fa-solid fa-pen-to-square">| Editar</i></a><br>
    <!-- @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) -->
    <a asp-action="Index"><i class="fa-solid fa-caret-left"> Volver</i></a>
</div>
