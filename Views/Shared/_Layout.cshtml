<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @RenderSection("Styles", false)
    <title>@ViewData["Title"] - Inmobiliaria</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Inmobiliaria.styles.css" asp-append-version="true" />
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            @if (!User.Identity.IsAuthenticated)
				{
					
                    <a class="py-2 d-none d-md-inline-block float-right m-3" href='/Usuarios/login'><i class="fa-solid fa-right-to-bracket" style="color: #1f4951;">Acceder</i></a>
                    
				}
            else{

            
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Inmobiliaria</a>
                    <a class="navbar-brand" asp-area="" asp-controller="Propietario" asp-action="Index">Propietarios</a>
                    <a class="navbar-brand" asp-area="" asp-controller="Inquilino" asp-action="Index">Inquilinos</a>
                    <a class="navbar-brand" asp-area="" asp-controller="Inmueble" asp-action="Index">Inmuebles</a>
                    <a class="navbar-brand" asp-area="" asp-controller="Contrato" asp-action="Index">Contrato</a>
                    <a class="navbar-brand" asp-area="" asp-controller="Pago" asp-action="Index">Pagos</a>
                   
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                   
                   <!-- @if(User.IsInRole("Administrador") || User.IsInRole("SuperAdministrador"))
					{
						<a class="py-2 d-none d-md-inline-block" asp-controller="Usuarios" asp-action="Index"><span class="lnr lnr-star"></span> Usuarios</a>
					}-->
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <!--li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li-->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="dropdown">
                    <a class="btn btn-primary dropdown-toggle text-light" href="#" role="button" id="userMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-reference="parent" data-display="static">
                        <span class="lnr lnr-user">  <i class="fa-solid fa-user fa-sm m-1" style="color: #ffffff;"></i>@User.Identity.Name</span> 
                    </a>

                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                          @if(User.IsInRole("Administrador") || User.IsInRole("SuperAdministrador"))
					{
						<a class="dropdown-item text-dark" asp-controller="Usuarios" asp-action="Index"><i class="lnr lnr-user"></i> Usuarios |<i class="fa-solid fa-users" ></i></a>
					}
                        <a class="dropdown-item text-dark" asp-controller="CambioClave" asp-action="Perfil"><i class="lnr lnr-user"></i> Perfil  | <i class="fa-solid fa-user-pen" ></i></a>
                        <a class="dropdown-item text-dark" asp-controller="Usuarios" asp-action="Logout"><i class="lnr lnr-exit"></i> Salir  | <i class="fa-solid fa-right-from-bracket"></i></a>

                    </div>
                </div>




                <!--div class="container border">
                    <div class="col-6 ">@User.Identity.Name</div>
                    <div class="col-6">
                        <a class="dropdown-item text-dark" asp-controller="Usuarios" asp-action="Perfil"><i class="lnr lnr-user"></i> Perfil</a>
							<a class="dropdown-item text-dark" asp-controller="Usuarios" asp-action="Logout"><i class="lnr lnr-exit"></i> Salir</a>
                    </div>
                </div-->
               
            
            }
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2023 - Inmobiliaria - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
   
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/0ff1a97b5e.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
