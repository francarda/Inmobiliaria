@model Inmobiliaria.Models.Pago

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group d-none">
                <label asp-for="IdPago" class="control-label"></label>
                <input asp-for="IdPago" class="form-control" readonly/>
                <span asp-validation-for="IdPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdContrato" class="control-label"></label>
                <input asp-for="IdContrato"class="form-control" list="data" >
                <datalist id="data">   
                    @foreach (var item in ViewData["contratos"] as List<Contrato>){
                    
                    <option class="list-group-item" value="@item.IdContrato"> @item.toString()</option>
                }
        
                </datalist>
                <span asp-validation-for="IdContrato" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="NumeroDePago" class="control-label"></label>
                <input asp-for="NumeroDePago" class="form-control" />
                <span asp-validation-for="NumeroDePago" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="FechaDePago" class="control-label"></label>
                <input asp-for="FechaDePago" class="form-control" type="date" value='@Model.FechaDePago.ToString("yyyy-MM-dd")'/>
                <span asp-validation-for="FechaDePago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control"/>
                <span asp-validation-for="Monto" class="text-danger"></span>
               
            </div>
            
            <div class="form-group">
                <input type="submit" value="Guardar cambios" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><i class="fa-solid fa-caret-left"> Volver</i></a>
</div>

